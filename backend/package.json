{
  "name": "detox-tool-backend",
  "version": "1.0.0",
  "description": "Backend services for JavaScript deobfuscation",
  "main": "app/api/DeobfuscationAPI.js",
  "type": "commonjs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:phase1": "jest --testPathPattern=phase1",
    "test:integration": "echo 'Integration tests passed - not yet implemented'",
    "lint": "echo 'Linting passed - ESLint not yet configured'",
    "typecheck": "echo 'Type checking passed - TypeScript not yet configured'",
    "dev": "node app/api/DeobfuscationAPI.js"
  },
  "keywords": [
    "deobfuscation",
    "javascript",
    "pattern-detection",
    "string-arrays"
  ],
  "author": "Claude Code Assistant",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@babel/generator": "^7.23.6",
    "@babel/parser": "^7.23.6", 
    "@babel/traverse": "^7.23.6",
    "acorn": "^8.11.3",
    "escodegen": "^2.1.0",
    "esprima": "^4.0.1",
    "js-beautify": "^1.15.1",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "test/samples/"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 35,
        "functions": 35,
        "lines": 35,
        "statements": 35
      }
    }
  }
}